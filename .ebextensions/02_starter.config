container_commands:
  01_migrate:
    command: "python3 DjangoGirlsTutorial/manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "python3 DjangoGirlsTutorial/manage.py collectstatic --noinput"
  03_createsu:
    command: "python3 DjangoGirlsTutorial/manage.py createsu"
    leader_only: true


  option_settings:
    "aws: elasticbeanstalk:application:environment":
      DJANGO_SETTINGS_MODULE: "django_test.settings"
      "PYTHONPATH": "/opt/python/current/app/django_test:$PYTHONPATH"
      "ALLOWED_HOSTS": ".elasticbeanstalk.com"
    "aws:elasticbeanstalk:container:python":
      WSGIPath: "django_test/django_test/wsgi.py"
      StaticFiles: "/static/=django_test/static/"
